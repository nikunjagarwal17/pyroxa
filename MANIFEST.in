include README.md
include LICENSE
include MANIFEST.in
include requirements.txt
include pyproject.toml

# Include all Python source files
recursive-include pyroxa *.py
recursive-include pyroxa *.pyx
recursive-include pyroxa *.pxd

# Include C++ source files
recursive-include src *.cpp
recursive-include src *.h

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst

# Include examples
recursive-include examples *.py
recursive-include examples *.yaml
recursive-include examples *.json

# Include test files
recursive-include tests *.py

# Exclude build artifacts and cache files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude *.pyd
global-exclude *.dll
global-exclude .git*
global-exclude .DS_Store
global-exclude build
global-exclude dist
global-exclude *.egg-info
